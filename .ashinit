# for use with the Almquist shell

PS1="\w# "

. .alias

function fc() {
    LAST_COMMAND=$(tail -2 $HOME/.ash_history | head -1)
    TEMP_FILE=$(mktemp)
    echo "$LAST_COMMAND" >> $TEMP_FILE
    $FCEDIT $TEMP_FILE
    CMD=$(head -1 $TEMP_FILE)
    echo "$CMD" >> $HOME/.ash_history
    eval $CMD
}

# vim: filetype=sh
